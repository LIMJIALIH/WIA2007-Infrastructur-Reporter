<?xml version="1.0" encoding="utf-8"?>
<!-- Landscape layout for Council Dashboard -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".CouncilDashboardActivity">

        <!-- Header Section -->
        <TextView
            android:id="@+id/tvDashboardTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="Management Council"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/btnLogout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnLogout"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:text="Logout"
            android:textSize="14sp"
            app:icon="@drawable/ic_logout"
            app:iconGravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:text="Welcome, 123"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDashboardTitle" />

        <!-- Stats Cards Container - Horizontal in landscape -->
        <LinearLayout
            android:id="@+id/statsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcome">

            <!-- Total Reports -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/statTotalReports"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_stat_card"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/ivStatTotalReports"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:contentDescription="Total Reports"
                    android:src="@drawable/ic_file"
                    android:tint="@color/stat_new_today"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvStatTotalReportsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivStatTotalReports" />

                <TextView
                    android:id="@+id/tvStatTotalReportsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Total Reports"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvStatTotalReportsValue" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Total Pending -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/statPending"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_stat_card"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/ivStatPending"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:contentDescription="Total Pending"
                    android:src="@drawable/ic_clock"
                    android:tint="@color/stat_this_week"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvStatPendingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivStatPending" />

                <TextView
                    android:id="@+id/tvStatPendingLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Total Pending"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvStatPendingValue" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- High Priority Pending -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/statHighPriority"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_stat_card"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/ivStatHighPriority"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:contentDescription="High Priority Pending"
                    android:src="@drawable/ic_alert"
                    android:tint="@color/stat_high_priority"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvStatHighPriorityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/stat_high_priority"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivStatHighPriority" />

                <TextView
                    android:id="@+id/tvStatHighPriorityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="High Priority\nPending"
                    android:gravity="center"
                    android:textColor="@color/text_primary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvStatHighPriorityValue" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Avg Response -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/statAvgResponse"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_stat_card"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/ivStatAvgResponse"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:contentDescription="Avg Response"
                    android:src="@drawable/ic_clock"
                    android:tint="@color/stat_avg_response"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvStatAvgResponseValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="2.5 hrs"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivStatAvgResponse" />

                <TextView
                    android:id="@+id/tvStatAvgResponseLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Avg Response"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvStatAvgResponseValue" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!-- Search and Filter Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchFilterContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/bg_search_bar"
            android:padding="@dimen/padding_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statsContainer">

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:contentDescription="@string/search_hint"
                android:src="@drawable/ic_search"
                app:layout_constraintBottom_toBottomOf="@+id/etSearch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etSearch" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="@dimen/search_bar_height"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:background="@android:color/transparent"
                android:hint="@string/search_hint"
                android:inputType="text"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_size_subtitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivFilter"
                app:layout_constraintStart_toEndOf="@+id/ivSearch"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivFilter"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:contentDescription="@string/filter_content_description"
                android:src="@drawable/ic_filter"
                app:layout_constraintBottom_toBottomOf="@+id/etSearch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etSearch" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Search Filter Buttons -->
        <LinearLayout
            android:id="@+id/searchFilterButtonsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:orientation="horizontal"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchFilterContainer">

            <TextView
                android:id="@+id/btnFilterLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/filter_button_inactive"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/filter_location"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/btnFilterDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/filter_button_inactive"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/filter_description"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

        </LinearLayout>

        <!-- Filter Dropdowns -->
        <LinearLayout
            android:id="@+id/filterDropdownContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchFilterButtonsContainer">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_bar_height"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_dropdown"
                android:padding="@dimen/padding_medium">

                <ImageView
                    android:id="@+id/ivFilterTypes"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/filter_content_description"
                    android:src="@drawable/ic_filter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnerTypes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:popupBackground="@color/card_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivFilterTypes"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_bar_height"
                android:background="@drawable/bg_dropdown"
                android:padding="@dimen/padding_medium">

                <ImageView
                    android:id="@+id/ivFilterSeverities"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/filter_content_description"
                    android:src="@drawable/ic_filter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnerSeverities"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:popupBackground="@color/card_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivFilterSeverities"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!-- All Tickets Header -->
        <TextView
            android:id="@+id/tvAllTickets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="@string/all_tickets"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_body"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/btnRefresh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filterDropdownContainer" />

        <LinearLayout
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_medium"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tvAllTickets"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvAllTickets">

            <ImageView
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_refresh"
                android:contentDescription="@string/refresh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refresh"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_button" />

        </LinearLayout>

        <!-- Tabs Container - Four Tabs in a row for landscape -->
        <LinearLayout
            android:id="@+id/tabsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAllTickets">

            <TextView
                android:id="@+id/tabTotalReports"
                android:layout_width="0dp"
                android:layout_height="@dimen/tab_height"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/tab_inactive_background"
                android:gravity="center"
                android:text="Total Reports"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_button" />

            <TextView
                android:id="@+id/tabCompleted"
                android:layout_width="0dp"
                android:layout_height="@dimen/tab_height"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/tab_inactive_background"
                android:gravity="center"
                android:text="Completed"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_button" />

            <TextView
                android:id="@+id/tabPending"
                android:layout_width="0dp"
                android:layout_height="@dimen/tab_height"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/tab_active_background"
                android:gravity="center"
                android:text="Pending"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_button"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabSpam"
                android:layout_width="0dp"
                android:layout_height="@dimen/tab_height"
                android:layout_weight="1"
                android:background="@drawable/tab_inactive_background"
                android:gravity="center"
                android:text="Spam"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_button" />

        </LinearLayout>

        <!-- Hide the second row of tabs in landscape -->
        <LinearLayout
            android:id="@+id/tabsContainer2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabsContainer" />

        <!-- Content Area -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:minHeight="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabsContainer">

            <!-- RecyclerView for tickets -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTickets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="3"
                tools:listitem="@layout/item_ticket" />

            <!-- Empty State -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/emptyStateContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_content_card"
                android:minHeight="200dp"
                android:padding="@dimen/padding_large"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivEmptyState"
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:contentDescription="@string/no_pending_tickets"
                    android:src="@drawable/ic_check_circle"
                    app:layout_constraintBottom_toTopOf="@+id/tvEmptyStateTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tvEmptyStateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@string/no_pending_tickets"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tvEmptyStateMessage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivEmptyState" />

                <TextView
                    android:id="@+id/tvEmptyStateMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/all_tickets_reviewed"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_subtitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvEmptyStateTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
